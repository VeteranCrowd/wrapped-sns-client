{
  "name": "@veterancrowd/wrapped-sns-client",
  "version": "1.3.5",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VeteranCrowd/wrapped-sns-client"
  },
  "author": "Jason G. Williscroft",
  "bugs": {
    "url": "https://github.com/VeteranCrowd/wrapped-sns-client/issues"
  },
  "description": "An AWS SNS client wrapped to provide consistent logging and other services.",
  "homepage": "https://github.com/VeteranCrowd/wrapped-sns-client#readme",
  "keywords": [],
  "dependencies": {
    "@aws-sdk/client-sns": "^3.427.0",
    "aws-xray-sdk": "^3.5.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-syntax-import-assertions": "^7.22.5",
    "@babel/preset-env": "^7.22.20",
    "@babel/register": "^7.22.15",
    "@types/node": "^20.8.4",
    "@veterancrowd/aws-cli": "^4.5.5",
    "auto-changelog": "^2.4.0",
    "babel-plugin-lodash": "^3.3.4",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "chai-match-pattern": "^1.3.0",
    "concat-md": "^0.5.1",
    "crlf": "^1.1.1",
    "eslint": "^8.51.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "jsdoc-to-markdown": "^8.0.0",
    "lefthook": "^1.5.2",
    "mocha": "^10.2.0",
    "nanoid": "^5.0.1",
    "release-it": "^16.2.1"
  },
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./dist/default/lib/index.js"
    }
  },
  "main": "./lib/index.js",
  "mocha": {
    "exclude": [
      "./dist/**",
      "./node_modules/**"
    ],
    "file": "./test/setup.js",
    "require": [
      "@babel/register",
      "chai-match-pattern"
    ],
    "spec": "./**/*.test.!(*.*)",
    "timeout": 10000
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "requireBranch": "dev",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:init": [
        "nr lint",
        "nr test",
        "nr build",
        "nr doc"
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch dev"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "scripts": {
    "lint": "eslint lib/**",
    "build": "babel lib -d dist/default/lib --delete-dir-on-start --config-file ./dist/default/.babelrc",
    "doc": "jsdoc2md -c doc/jsdoc.config.json -f lib/**/*.* -t doc/api-template.hbs > doc/2-api.jsdoc2.md && concat-md doc --hide-anchor-links > README.md",
    "release": "vc -c \"release-it\"",
    "test": "vc -c \"mocha\""
  },
  "type": "module"
}
